# =============================================================================
# Audit Service Local Development Configuration
# =============================================================================
# This file is used for VS Code debugging when infrastructure runs in Docker
# Copied to .env automatically by scripts/deploy.sh local

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=local
PORT=9000
SERVICE_NAME=audit-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection - connects to Docker infrastructure
DB_HOST=localhost
DB_PORT=5434
DB_NAME=audit_service_local_db
DB_USER=audituser
DB_PASSWORD=audit_dev_pass_123
DB_SSL=false
DB_POOL_MIN=5
DB_POOL_MAX=20

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection - connects to Docker infrastructure, uses database 2
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_pass_123
REDIS_DB=2
REDIS_URL=redis://:redis_dev_pass_123@localhost:6379/2

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Connects to Docker infrastructure
RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# =============================================================================
# Service Discovery
# =============================================================================
# Infrastructure services - connects to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=7a9f2d84b3c6e1f8a5d7c2b9e6f4a1d8c5b2e9f6a3d0c7b4e1f8a5d2c9b6e3f0a7
SERVICE_SECRET=your-super-secure-service-secret-for-development-only
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:9000
CORS_CREDENTIALS=true

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/audit-service-local.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_SERVICE_NAME=audit-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id

# =============================================================================
# Metrics Configuration
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9001

# =============================================================================
# Audit-Specific Configuration
# =============================================================================
# Data retention and processing settings
AUDIT_RETENTION_DAYS=365
AUDIT_BATCH_SIZE=1000
AUDIT_CLEANUP_INTERVAL_HOURS=24

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_CHECK_TIMEOUT_MS=5000
