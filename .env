# =============================================================================
# Audit Service Environment Configuration Template
# =============================================================================
# This file serves as a template for creating environment-specific .env files
# Copy this file and rename it to .env, then fill in the appropriate values

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=9000
SERVICE_NAME=audit-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection settings (using standard PostgreSQL env var names)
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_DB=audit_service_db
POSTGRES_USER=audituser
POSTGRES_PASSWORD=audit_dev_pass_123
# Application-specific database settings
DB_SSL=false
DB_POOL_MIN=5
DB_POOL_MAX=20

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection settings - audit service uses database 2
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=2
REDIS_URL=redis://:your-redis-password@localhost:6379/2

# =============================================================================
# Message Broker Configuration
# =============================================================================
# RabbitMQ connection string
MESSAGE_BROKER_SERVICE_URL=http://localhost:4000
MESSAGE_BROKER_API_KEY=your-api-key

# =============================================================================
# Service Discovery
# =============================================================================
# URLs for connecting to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-jwt-secret-key-at-least-256-bits-long
SERVICE_SECRET=your-service-secret-key
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:9000
CORS_CREDENTIALS=true

# =============================================================================
# Environment Settings
# =============================================================================
DEBUG=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/audit-service.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# OpenTelemetry tracing configuration
ENABLE_TRACING=true
OTEL_SERVICE_NAME=audit-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Request correlation tracking
CORRELATION_ID_HEADER=x-correlation-id

# =============================================================================
# Metrics Configuration
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9001

# =============================================================================
# Audit-Specific Configuration
# =============================================================================
# Data retention and processing settings
AUDIT_RETENTION_DAYS=365
AUDIT_BATCH_SIZE=1000
AUDIT_CLEANUP_INTERVAL_HOURS=24

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_CHECK_TIMEOUT_MS=5000
