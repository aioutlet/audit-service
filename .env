# =============================================================================
# Audit Service Configuration
# =============================================================================

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=9000
SERVICE_NAME=audit-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5434
DB_NAME=audit_service_local_db
DB_USER=audituser
DB_PASSWORD=audit_dev_pass_123
DB_SSL=false
DB_POOL_MIN=5
DB_POOL_MAX=20

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Note: Consumers connect directly to the message broker (RabbitMQ, Kafka, etc.)
# For true broker abstraction, use Message Broker Service consumer API (future enhancement)
MESSAGE_BROKER_TYPE=rabbitmq
MESSAGE_BROKER_URL=amqp://admin:admin@localhost:5672
MESSAGE_BROKER_QUEUE=audit-service.queue

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=7a9f2d84b3c6e1f8a5d7c2b9e6f4a1d8c5b2e9f6a3d0c7b4e1f8a5d2c9b6e3f0a7
SERVICE_SECRET=your-super-secure-service-secret-for-development-only
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:9000
CORS_CREDENTIALS=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/audit-service.log

# =============================================================================
# Observability Configuration
# =============================================================================
ENABLE_TRACING=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
CORRELATION_ID_HEADER=x-correlation-id

# =============================================================================
# Metrics Configuration
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9001

# =============================================================================
# Audit-Specific Configuration
# =============================================================================
AUDIT_RETENTION_DAYS=365
AUDIT_BATCH_SIZE=1000
AUDIT_CLEANUP_INTERVAL_HOURS=24
