# =============================================================================
# Audit Service Production Environment Configuration
# =============================================================================
# This file is used for VS Code debugging when connecting to production infrastructure
# Copied to .env automatically by scripts/deploy.sh production

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=production
PORT=9000
SERVICE_NAME=audit-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection - connects to production Docker infrastructure
DB_HOST=localhost
DB_PORT=5436
DB_NAME=audit_service_prod_db
DB_USER=audituser
DB_PASSWORD=CHANGE_ME_SECURE_POSTGRES_PASSWORD
DB_SSL=true
DB_POOL_MIN=10
DB_POOL_MAX=50

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection - connects to production Docker infrastructure, uses database 2
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_DB=2
REDIS_URL=redis://:CHANGE_ME_SECURE_REDIS_PASSWORD@localhost:6381/2

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Connects to production Docker infrastructure
RABBITMQ_URL=amqp://admin:CHANGE_ME_SECURE_RABBITMQ_PASSWORD@localhost:5674

# =============================================================================
# Service Discovery
# =============================================================================
# Production infrastructure services - connects to other microservices
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_AT_LEAST_256_BITS_LONG
SERVICE_SECRET=CHANGE_ME_PRODUCTION_SERVICE_SECRET
API_RATE_LIMIT_WINDOW_MS=15000
API_RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=https://yourdomain.com,https://api.yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# Production Settings
# =============================================================================
DEBUG=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_CONSOLE=false
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/audit-service-production.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_SERVICE_NAME=audit-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otlp-endpoint:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id

# =============================================================================
# Metrics Configuration
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9001

# =============================================================================
# Audit-Specific Configuration
# =============================================================================
# Data retention and processing settings for compliance
AUDIT_RETENTION_DAYS=2555  # 7 years for compliance
AUDIT_BATCH_SIZE=5000
AUDIT_CLEANUP_INTERVAL_HOURS=24

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_CHECK_TIMEOUT_MS=10000
